{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-restricted-syntax": "off",
    "no-process-exit": "off",
    "no-plusplus": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "no-param-reassign": "warn",
    "no-await-in-loop": "off"
  }
}
